    <div class="container">
        <div class="row">
            <div class="col-sm-6">
                <h3>Edit Book Details </h3>
                <%= typeof msg != 'undefined'?msg: '' %>
                <label for="exampleInputText1"  class="form-control">
                    <select name="category" form="bookdetails" id="category"> 
                        
                        <% categories.forEach(function(category){ %>
                            <option><%= category.categoryName %></option>
                        <% }) %> 
                        
                        
                    </select> 
                </label>
               <P> Old Category: <%= book.category%></P>
                
                
                <form  action="/updatebook" enctype="multipart/form-data" method="POST" id ="bookdetails">
                    <input type="hidden" name="id" value="<%= book._id %>">
                    <div class="form-group">
                        
                        <label for="exampleInputText2">Book Name</label>
                        <input type="text" class="form-control" id="bookname" name="bookname" aria-describedby="textHelp"  value="<%= book.bookname%>" placeholder="Enter book name">
                        
                    </div>
                    <div class="form-group">
                        <label for="exampleInputText1">Author Name</label>
                        <input type="text" class="form-control" id="author" name="author" aria-describedby="textHelp" value="<%= book.author%>" placeholder="Enter author name">
                        
                    </div>
                    <div class="form-group">
                        <label for="exampleInputText1">Publisher</label>
                        <input type="text" class="form-control" id="publisher" name="publisher" aria-describedby="textHelp"  value="<%= book.publisher%>" placeholder="Enter author name">
                        
                    </div>
        
                    <div class="form-group">
                        <label for="exampleInputText1">Edition</label>
                        <input type="text" class="form-control" id="edition" name="edition" aria-describedby="textHelp"  value="<%= book.edition%>" placeholder="Enter author name">
                        
                    </div>
                
                    <div class="form-group">
                        <label for="exampleInputText1">Language</label>
                        <input type="text" class="form-control" id="language" name="language" aria-describedby="textHelp"  value="<%= book.language%>" placeholder="Enter author name">
                        
                    </div>
                    <div class="form-group">
                        <label for="exampleInputText1">Dimension</label>
                        <input type="text" class="form-control" id="dimension" name="dimension" aria-describedby="textHelp"  value="<%= book.dimension%>" placeholder="Enter author name">
                        
                    </div>
                    <div class="form-group">
                        <label for="exampleInputText2">Price</label>
                        <input type="text" class="form-control" id="price" name="price" aria-describedby="textHelp"  value="<%= book.price%>" placeholder="Enter price">
                        
                    </div>
        
                    <div class="form-group">    
                        <label for="exampleInputText2">Book Description</label>
                        <textarea type="text" class="form-control" id="description" name="description" aria-describedby="textHelp"   placeholder="Enter price"></textarea>
                        
                    </div>
                    <P><%= book.description%></P>
                    
                    <div class="form-group">
                        <label for="exampleInputFile">Upload Photo</label>
                        <input type="file" class="form-control-file" id="exampleInputFile" aria-describedby="fileHelp" name="file" value="<%= book.image%>">
                        <!-- <small id="fileHelp" class="form-text text-muted">This is some placeholder block-level help text for the above input. It's a bit lighter and easily wraps to a new line.</small> -->
                    </br>
                    Old Book Image:
                   </br>
                    <% if(book.image){ %>
                        
                        <img src="/uploads/<%= book.image %>" alt="book image" width="80">
                    <% } %>
                        <button type="submit" class="btn btn-primary">Submit</button>
                    </div>
                </form>
                   
            </div>
        
            <div class="col-sm-6"></div>
    
    </div>

    </div>
    
