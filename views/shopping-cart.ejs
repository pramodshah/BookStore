<%- include('./partials/header') %>
<%- include('./searchBox') %>
<div class="container">
    <% if(products){%>
        <div class="row">
            
            <div class="col-sm-6 col-md-6 col-md-offset-3 col-sm-offset-3">
                

                    <% products.forEach(function(product){ %>

                    
                        <div style="width: 100%; border:0.01em #ebebe0 solid; padding:7px;">
                            <div style="width: 50%; height: 100px; float: left;"> 
                                <div class="tab-pane active" id="pic-1"><img src='/uploads/<%= product.item.image%>' style="height:80px;width:50px"/></div>
                            </div>
                            <div style="margin-left: 50%; height: 100px;"> 
                                <p style="color:black;">Book :<%=product.item.bookname%></P>
                                    <p class="label label-dark">Price :Rs.<%=product.price%></p>
                                    <p class="badge badge-dark">Qty :<%=product.qty%></p>
                            </div>
                        </div>
                    </br>
                    
                   
                    <%})%> 
                        
                
            </div>
            
        </div>
        <div class="row">
            <div class="col-sm-6 col-md-4 col-md-offset-4 col-sm-offset-3">
                <strong>Total: <%=totalPrice%></strong>
            </div>
        </div>
        <hr>
        <div class="row">
            <div class="col-sm-6 col-md-4 col-md-offset-4 col-sm-offset-3">
                <a href="/checkout"><button type="button" class="btn btn-dark">Checkout</button></a>
                
            </div>
        </div>
    <%}%> 

    <% if(!products){%>
        <div class="row">
            <div class="col-sm-2"></div>
            <div class="col-sm-8">
            </br>
            </br>
                <p class="alert alert-success" style="text-align: center;padding:15px">No Items in Cart yet!</p>
            </div>
            <div class="col-sm-2"></div>
            
        </div>
    <%}%>
       

</div>

