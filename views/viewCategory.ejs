<div class="container">
    <div class="row">
        <% categories.forEach(function(category){ %>
            <div class="col-sm-3">
              <a href="/view/<%=category._id %>">
              <div class="card mb-3">
                
                <img style="height: 300px; width: 100%; display: block; padding:10px;" src='/uploads/<%= category.image%>' alt="Card image">
                <div class="card-body">
                  <p class="card-text"><%= category.bookname %></p>
                </div>
              
              </div>
            </a>
            </div>
            <% }) %>

    </div>

</div>
    


 